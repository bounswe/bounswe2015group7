<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>sculture</servlet-name>
        <servlet-class>com.sculture.MainServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>searchall</servlet-name>
        <servlet-class>com.sculture.SearchAll</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>search</servlet-name>
        <servlet-class>com.sculture.Search</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addcomment</servlet-name>
        <servlet-class>com.sculture.AddComment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getstory</servlet-name>
        <servlet-class>com.sculture.GetStory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getuser</servlet-name>
        <servlet-class>com.sculture.GetUser</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.sculture.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.sculture.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>savestory</servlet-name>
        <servlet-class>com.sculture.SaveStory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addstory</servlet-name>
        <servlet-class>com.sculture.AddStory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>reportstory</servlet-name>
        <servlet-class>com.sculture.ReportStory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>com.sculture.Signup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>followuser</servlet-name>
        <servlet-class>com.sculture.FollowUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editstory</servlet-name>
        <servlet-class>com.sculture.EditStory</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>addcomment</servlet-name>
        <url-pattern>/addcomment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getstory</servlet-name>
        <url-pattern>/get/story/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getuser</servlet-name>
        <url-pattern>/get/user/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sculture</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>savestory</servlet-name>
        <url-pattern>/savestory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addstory</servlet-name>
        <url-pattern>/addstory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>reportstory</servlet-name>
        <url-pattern>/report/story/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>followuser</servlet-name>
        <url-pattern>/follow/user/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>searchall</servlet-name>
        <url-pattern>/search/all</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>search</servlet-name>
        <url-pattern>/search/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editstory</servlet-name>
        <url-pattern>/edit/story/*</url-pattern>
    </servlet-mapping>
    <mime-mapping>
        <extension>js</extension>
        <mime-type>application/javascript</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>css</extension>
        <mime-type>text/css</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>jpg</extension>
        <mime-type>image/jpeg</mime-type>
    </mime-mapping>
</web-app>